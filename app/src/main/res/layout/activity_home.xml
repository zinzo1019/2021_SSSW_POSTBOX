<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:text="" />

    <ImageView
        android:id="@+id/mailbox"
        android:layout_width="200sp"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:src="@drawable/home_logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#C7CAF7"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/home_hat" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/elicedigitalbaseum_bold"
                    android:text="새로운 공지사항"
                    android:textColor="#000"
                    android:textSize="13pt"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/unread_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/elicedigitalbaseum_bold"
                        android:text="00"
                        android:textColor="@color/crystal_blue"
                        android:textSize="15pt"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/gun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13pt"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/elicedigitalbaseum_bold"
                        android:text="건" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:text=""
            android:background="@drawable/white_background"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="@font/elicedigitalbaseum_bold"
                    android:text="키워드"
                    android:textColor="#000"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/my_keyword_list_plus_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="225dp"
                    android:background="@android:color/transparent"
                    android:text="+"
                    android:textColor="#3B4CF6"
                    android:textSize="18dp"  />
            </LinearLayout>
            <!--Recyclerview-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_keyword_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/elicedigitalbaseum_bold"
                    android:gravity="start"
                    android:text="공지사항"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/check_keyword_post_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="210dp"
                    android:background="@android:color/transparent"
                    android:text="+"
                    android:textColor="#3B4CF6"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/home_post_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="610sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginLeft="18sp"
                android:fontFamily="@font/elicedigitalbaseum_bold"
                android:text="바로가기"
                android:textColor="#000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <ImageButton
                    android:id="@+id/portal_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/edu_sys_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/sungshin_main_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

                <ImageButton
                    android:id="@+id/major_shortcut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_btn_shortcuts"
                    android:scaleType="fitCenter"
                    android:src="@drawable/homeicon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/elicedigitalbaseum_regular"
                    android:gravity="center_horizontal"
                    android:text="성신 포탈"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/elicedigitalbaseum_regular"
                    android:gravity="center_horizontal"
                    android:text="교육시스템"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/elicedigitalbaseum_regular"
                    android:gravity="center_horizontal"
                    android:text="학교 홈페이지"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/elicedigitalbaseum_regular"
                    android:gravity="center_horizontal"
                    android:text="학과 홈페이지"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="6pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:labelVisibilityMode="labeled"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_bar" />

    </FrameLayout>
</LinearLayout>